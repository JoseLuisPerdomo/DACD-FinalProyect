    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.example</groupId>
        <artifactId>Practica-Prediction</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <artifactId>Datalake-Builder</artifactId>
    <name>Archetype - event-builder-store</name>
    <url>https://maven.apache.org</url>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>Datalake-Builder/src/main/java/org/PerdomoDeVega/control/Main.java</mainClass>
                        </manifest>
                    </archive>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                </configuration>
            </plugin>
        </plugins>
    </build>

